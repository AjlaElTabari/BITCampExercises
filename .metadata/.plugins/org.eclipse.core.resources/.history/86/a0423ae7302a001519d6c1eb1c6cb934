package vjezbe.zadaca;

import java.util.Arrays;
import java.util.EmptyStackException;

/**
 * Represents a stack of String objects
 * Implements few standard methods for stack manipulation
 * @author ajla.eltabari
 *
 */
public class StringStack {
	private String[] array;
	
	/**
	 * Empty constructor
	 * Initialize String array to 0
	 */
	public StringStack() {
		this.array = new String[0];
	}

	/**
	 * Checks if an array is empty
	 * @returns true if an array is empty, and false if it is not
	 */
	public boolean empty() {
		return (array.length == 0);
	}
	
	/**
	 * Inserts new value at the end of the array
	 * @param value that needs to be added
	 * @returns added value
	 */
	public String push(String value) {
		array = Arrays.copyOf(array, array.length + 1);
		array[array.length - 1] = value;
		return value;
	}
	
	/**
	 * Deletes last value from the stack 
	 * @returns deleted value
	 * @throws EmptyStackException in case that stack is empty
	 */
	public String pop() throws EmptyStackException {
		if (array.length > 0) {
			String temp = array[array.length - 1];
			array = Arrays.copyOf(array, array.length - 1);
			return temp;
		} else {
			throw new EmptyStackException();
		}
	}
	
	public String peek() throws EmptyStackException {
		if (array.length > 0) {
			return array[array.length - 1];
		} else {
			throw new EmptyStackException();
		}
	}
}
